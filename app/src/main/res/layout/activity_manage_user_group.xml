<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageUserGroup">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_user_group_all"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="#E4E4E4"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/create_user_group"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/toolbar_user_group_all"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/enter_user_group_txt"
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            />

        <Button
            android:id="@+id/enter_user_group_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Add Category" />

    </LinearLayout>

    <ListView
        android:title="All Categories"
        android:id="@+id/view_user_group_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_below="@id/create_user_group"
        >
    </ListView>

</RelativeLayout>